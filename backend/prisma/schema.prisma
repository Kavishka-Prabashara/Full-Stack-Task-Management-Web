generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// prisma/schema.prisma

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  username String
  password String
  tasks    Task[]
}

// prisma/schema.prisma
model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  completed   Boolean   @default(false)
  dueDate     DateTime? // New: for date (stores full date-time, you'll just use the date part)
  dueTime     String? // New: for time (e.g., "HH:MM")
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}
